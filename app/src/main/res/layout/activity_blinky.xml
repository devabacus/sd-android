<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".BlinkyActivity"
	tools:ignore="ContentDescription">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/appbar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</android.support.design.widget.AppBarLayout>


	<ScrollView
		android:id="@+id/device_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/appbar_layout"
		android:visibility="visible">

		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

            <fragment
                android:id="@+id/frag_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="no.nordicsemi.android.blinky.preferences.DebugFrag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

			<fragment
				android:id="@+id/frag_weight"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:name="no.nordicsemi.android.blinky.WeightPanel"
				app:layout_constraintTop_toBottomOf="@id/frag_debug"
				/>


			<fragment
				android:id="@+id/frag_butSet"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:name="no.nordicsemi.android.blinky.Butset"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/frag_weight"

				/>


			<fragment
				android:id="@+id/frag_but"
				android:name="no.nordicsemi.android.blinky.ButtonFrag"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentStart="true"
				app:layout_constraintTop_toBottomOf="@id/frag_butSet" />

			<fragment
				android:id="@+id/frag_state"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:name="no.nordicsemi.android.blinky.StateFragment"
				app:layout_constraintTop_toBottomOf="@id/frag_but"

				/>

			<fragment
				android:id="@+id/frag_scale_set"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:name="no.nordicsemi.android.blinky.contr_settings.ScaleSetFragment"
				app:layout_constraintTop_toBottomOf="@id/frag_state"

				/>


		</android.support.constraint.ConstraintLayout>

	</ScrollView>

	<LinearLayout
		android:id="@+id/progress_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:visibility="gone"
		android:padding="@dimen/activity_horizontal_margin">

		<TextView
			android:id="@+id/connection_state"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textSize="16sp"
			tools:text="@string/state_connecting"/>

		<ProgressBar
			android:id="@+id/progress_bar"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:indeterminate="true"/>
	</LinearLayout>


</RelativeLayout>