<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_state"
        tools:text="button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/cb_cor_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10dp"
        android:text="@string/autocorrect"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_state"
        app:layout_constraintEnd_toStartOf="@id/btnRes" />


    <Button
        android:id="@+id/btnRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:text="@string/Reset"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/but_rec_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnRes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        >

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>
