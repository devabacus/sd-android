<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="no.nordicsemi.android.sdr.archive.ArchiveDebug">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/debug_archive_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/tv_debug_date_id"
            tools:text="8:12:34"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_debug_weight_id"
            tools:text="150"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_debug_date_id"
            android:layout_marginStart="20dp"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_debug_adc_id"
            tools:text="150"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_debug_weight_id"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_debug_tare_id"
            tools:text="-50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_debug_adc_id"
            android:layout_marginStart="10sp"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_debug_type_id"
            tools:text="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_debug_tare_id"
            android:layout_marginStart="20sp"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.1"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>