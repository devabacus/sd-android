<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_num_weight"
        style="@style/Text.item"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        tools:text="5461."

        />

    <TextView
        android:id="@+id/tv_datetime"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        app:layout_constraintStart_toStartOf="@id/tv_num_weight"
        tools:text="15.02 10:08"

        />

    <TextView
        android:id="@+id/tv_weight"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tv_datetime"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="19500"
        />

    <TextView
        android:id="@+id/tv_true_weight"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toEndOf="@id/tv_datetime"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="17500"
        />


    <!--<TextView-->
        <!--android:id="@+id/tv_adc_weight"-->
        <!--android:textSize="15sp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="20dp"-->
        <!--app:layout_constraintStart_toEndOf="@id/tv_datetime"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--tools:text="350"-->
        <!--/>-->


    <TextView
        android:id="@+id/tv_tare"
        style="@style/Text.item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_datetime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"


        tools:text="-2000" />

    <TextView
        android:id="@+id/tv_stab_time"
        style="@style/Text.item"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_datetime"
        android:layout_marginStart="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        tools:text="14"
        />




</android.support.constraint.ConstraintLayout>