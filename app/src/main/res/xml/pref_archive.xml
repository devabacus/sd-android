<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="archive_save"
        android:title="Сохранять в архив" />

    <EditTextPreference
        android:key="max_discrete"
        android:title="Макс. изменение веса, кг"
        android:inputType="numberDecimal">

    </EditTextPreference>


    <EditTextPreference
        android:key="time_stab"
        android:inputType="numberDecimal"

        android:title="Время стабилизации, с">

    </EditTextPreference>

    <EditTextPreference
        android:key="min_weight"
        android:inputType="numberDecimal"

        android:title="Минимальный вес, кг">

    </EditTextPreference>

    <EditTextPreference
        android:key="archive_driver_weight_max"
        android:defaultValue="1"
        android:inputType="numberDecimal"
        android:title="Макс вес водителя + пассажиров, кг">

    </EditTextPreference>

    <SwitchPreference
        android:key="debug_archive"
        android:title="Отладка"
        android:defaultValue="false"
        />

    <SwitchPreference
        android:key="adc_weight"
        android:title="Сохранять вес с АЦП"
        android:defaultValue="false"
        />
    <SwitchPreference
        android:key="cor_archive_save"
        android:title="Сохранять по нажатию"
        android:defaultValue="false"
        />
    <SwitchPreference
        android:key="weight_tonn"
        android:title="Вес в тоннах"
        android:defaultValue="false"
        />



